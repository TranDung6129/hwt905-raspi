{
  "logging": {
    "log_file_path": "logs/application.log",
    "log_level": "INFO",
    "max_bytes": 10485760,
    "backup_count": 5
  },
  "mqtt": {
    "broker_address": "localhost",
    "broker_port": 1883,
    "client_id": "rpi_hwt905_backend_client",
    "publish_data_topic": "sensor/hwt905/processed_data",
    "subscribe_commands_topic": "sensor/hwt905/commands",
    "publish_status_topic": "sensor/hwt905/status",
    "keepalive": 60,
    "use_tls": false,
    "username": "",
    "password": "",
    "send_strategy": "continuous" 
  },
  "sensor": {
    "uart_port": "/dev/ttyUSB0",
    "baud_rate": 115200,          
    "default_output_rate_hz": 200, 
    "default_output_content": {   
      "time": true,
      "acceleration": true,
      "angular_velocity": true,
      "angle": true,
      "magnetic_field": false,
      "port_status": false,
      "atmospheric_pressure_height": false,
      "gnss_data": false,
      "gnss_speed": false,
      "quaternion": false,
      "gnss_accuracy": false
    }
  },
  "processing": {
    "data_buffer_size": 20,         
    "gravity_g": 9.80665,          
    "dt_sensor_mock": 0.005,        
    "dt_sensor_actual": 0.005,      
    "acc_filter_type": "low_pass",  
    "acc_filter_param": 0.1,        
    "rls_sample_frame_size": 20,    
    "rls_calc_frame_multiplier": 50,
    "rls_filter_q": 0.9875,
    "fft_n_points": 512,            
    "fft_min_freq_hz": 0.1,        
    "fft_max_freq_hz": null        
  },
  "data_compression": {
    "format": "json",            
    "use_zlib": false               
  },
  "mock_data": false  
}
# Cấu hình cảm biến HWT905
SENSOR_UART_PORT=/dev/ttyUSB0
SENSOR_BAUD_RATE=115200
SENSOR_RECONNECT_DELAY_S=5
SENSOR_DEFAULT_OUTPUT_RATE_HZ=200

# Cấu hình nội dung output mặc định
SENSOR_OUTPUT_TIME=true
SENSOR_OUTPUT_ACCELERATION=true
SENSOR_OUTPUT_ANGULAR_VELOCITY=false
SENSOR_OUTPUT_ANGLE=false
SENSOR_OUTPUT_MAGNETIC_FIELD=false
SENSOR_OUTPUT_PORT_STATUS=false
SENSOR_OUTPUT_ATMOSPHERIC_PRESSURE_HEIGHT=false
SENSOR_OUTPUT_GNSS_DATA=false
SENSOR_OUTPUT_GNSS_SPEED=false
SENSOR_OUTPUT_QUATERNION=false
SENSOR_OUTPUT_GNSS_ACCURACY=false

# Cấu hình xử lý dữ liệu
PROCESSING_DATA_BUFFER_SIZE=20
PROCESSING_GRAVITY_G=9.80665
PROCESSING_DT_SENSOR_ACTUAL=0.005
PROCESSING_ACC_FILTER_TYPE=low_pass
PROCESSING_ACC_FILTER_PARAM=0.1
PROCESSING_RLS_SAMPLE_FRAME_SIZE=100
PROCESSING_RLS_CALC_FRAME_MULTIPLIER=2
PROCESSING_RLS_FILTER_Q=0.9875
PROCESSING_FFT_N_POINTS=512
PROCESSING_FFT_MIN_FREQ_HZ=0.1
PROCESSING_FFT_MAX_FREQ_HZ=null

# Cấu hình điều khiển quy trình
PROCESS_CONTROL_DECODING=true
PROCESS_CONTROL_PROCESSING=true
PROCESS_CONTROL_MQTT_SENDING=true
PROCESS_CONTROL_MQTT_MODE=continuous

# Cấu hình scheduled MQTT service
SCHEDULED_MQTT_ENABLED=false
SCHEDULED_MQTT_INTERVAL_SECONDS=60
SCHEDULED_MQTT_DATA_SOURCE_DIR=data/processed_data
SCHEDULED_MQTT_BATCH_SIZE=100
SCHEDULED_MQTT_DELETE_AFTER_SEND=false
SCHEDULED_MQTT_TOPIC=sensor/batch_data

# Cấu hình MQTT send strategy
MQTT_SEND_STRATEGY_TYPE=realtime
MQTT_SEND_STRATEGY_BATCH_SIZE=100
MQTT_SEND_STRATEGY_INTERVAL_SECONDS=60
MQTT_SEND_STRATEGY_DATA_SOURCE_DIR=data/processed_data
MQTT_SEND_STRATEGY_DELETE_AFTER_SEND=false

# Cấu hình nén dữ liệu
DATA_COMPRESSION_FORMAT=json
DATA_COMPRESSION_USE_ZLIB=false

# Cấu hình lưu trữ dữ liệu
DATA_STORAGE_ENABLED=true
DATA_STORAGE_IMMEDIATE_TRANSMISSION=true
DATA_STORAGE_BATCH_TRANSMISSION_SIZE=50
DATA_STORAGE_BASE_DIR=data
DATA_STORAGE_FORMAT=csv
DATA_STORAGE_MAX_FILE_SIZE_MB=10.0
DATA_STORAGE_SESSION_PREFIX=session

# Cấu hình dọn dẹp
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE_HOURS=24
CLEANUP_LOGS_RETENTION_DAYS=7
CLEANUP_DATA_RETENTION_DAYS=30